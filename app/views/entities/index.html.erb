<p id="notice"><%= notice %></p>
<h4>Listing Entities</h4>
<table class="striped">
  <thead>
    <tr>
      <th>Entry</th>
      <th>Text</th>
      <th>Relevance</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @entities.each do |entity| %>
      <tr>
        <td><%= entity.entry_id %></td>
        <td><%= entity.text %></td>
        <td><%= entity.relevance %></td>
        <td><%= link_to 'Show', entity %></td>
        <td><%= link_to 'Edit', edit_entity_path(entity) %></td>
        <td><%= link_to 'Destroy', entity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= will_paginate @entities %>
<br>
<%= link_to 'New Entity', new_entity_path %>
